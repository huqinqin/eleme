border-1px($color)
  position relative
  &::after
    display block
    width 100%
    position absolute
    bottom 0
    left 0
    content :' '
    border-top 1px solid $color


bg-image($url)
  background url($url + '@2x.png')
  @media (-webkit-min-device-pixel-ratio: 3) , (min-device-pixel-ratio: 3)
     background url($url + '@3x.png')
     background-repeat no-repeat
     background-size 20px 15px
